<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewCuisineDish"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spicy_fresh2" />

    <TextView
        android:id="@+id/textViewCuisineDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/burger"
        app:layout_constraintEnd_toEndOf="@+id/imageViewCuisineDish"
        app:layout_constraintStart_toStartOf="@+id/imageViewCuisineDish"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCuisineDish" />
</androidx.constraintlayout.widget.ConstraintLayout>